<div class="container mt-5">
    <h1 class="text-center">Daftar Pasien</h1>

    <!-- Pencarian Pasien -->
    <div class="form-group mb-4 d-flex">
        <label for="searchPatient" class="form-label me-3">Cari Pasien</label>
        <input type="text" class="form-control" id="searchPatient" placeholder="Cari berdasarkan nama pasien">
        <button class="btn btn-secondary ms-2" id="searchButton">Cari</button>
    </div>

    <!-- Form to Add New Patient -->
    <!-- Tombol untuk menampilkan modal tambah pasien -->
    <button class="btn btn-primary" id="addPatientBtn">Tambah Pasien</button>

    <!-- Modal Tambah Pasien -->
    <!-- Modal Tambah Pasien -->
<div class="modal fade" id="addPatientModal" tabindex="-1" aria-labelledby="addPatientModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPatientModalLabel">Tambah Pasien Baru</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form untuk menambah pasien -->
                <form id="addPatientForm">
                    <div class="form-group">
                        <label for="patientName">Nama Pasien</label>
                        <input type="text" id="patientName" class="form-control" placeholder="Masukkan nama pasien" required>
                    </div>
                    <div class="form-group">
                        <label for="patientAddress">Alamat Pasien</label>
                        <input type="text" id="patientAddress" class="form-control" placeholder="Masukkan alamat pasien" required>
                    </div>
                    <div class="form-group">
                        <label for="patientPhone">Nomor Telepon Pasien</label>
                        <input type="text" id="patientPhone" class="form-control" placeholder="Masukkan nomor telepon pasien" required>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Tambah Pasien</button>
                </form>
            </div>
        </div>
    </div>
</div>


    <!-- List of Patients -->
    <ul id="patientList" class="list-group mt-4">
        <% pasien.forEach(pasien => { %>  
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    <strong>Nama:</strong> <%= pasien.NamaPasien %> <br>
                    <strong>Alamat:</strong> <%= pasien.Alamat %> <br>
                    <strong>No. Telp:</strong> <%= pasien.NoTelp %> 
                </span>
                <div>
                    <button class="btn btn-sm btn-success mr-2 editBtn" data-id="<%= pasien.id %>">Edit</button>
                    <button class="btn btn-sm btn-danger deleteBtn" data-id="<%= pasien.id %>">Delete</button>
                </div>
            </li>
        <% }); %>
    </ul>    

    <!-- Edit Patient Modal -->
    <div id="editModal" class="modal fade" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit Patient</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editPatientForm">
                        <div class="form-group">
                            <label for="editPatientName">Name</label>
                            <input type="text" id="editPatientName" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="editPatientAddress">Address</label>
                            <input type="text" id="editPatientAddress" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="editPatientPhone">Phone Number</label>
                            <input type="text" id="editPatientPhone" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        // Tampilkan modal ketika tombol "Tambah Pasien" diklik
        $('#addPatientBtn').on('click', function () {
            $('#addPatientModal').modal('show');
        });

        // Menambah pasien baru
        $('#addPatientForm').on('submit', function (e) {
            e.preventDefault();
            const patientName = $('#patientName').val().trim();
            const patientAddress = $('#patientAddress').val().trim();
            const patientPhone = $('#patientPhone').val().trim();

            if (patientName && patientAddress && patientPhone) {
                $.ajax({
                    url: '/pasien',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        namaPasien: patientName,
                        alamat: patientAddress,
                        noTelp: patientPhone
                    }),
                    success: function () {
                        location.reload(); // Reload untuk menampilkan pasien baru
                    },
                    error: function (error) {
                        console.error("Terjadi kesalahan saat menambah pasien:", error.responseText);
                    }
                });
            }
        });

        // Fitur Pencarian Pasien dengan Tombol
        $('#searchButton').on('click', function () {
            const searchQuery = $('#searchPatient').val().toLowerCase();
            $('#patientList li').each(function () {
                const patientName = $(this).find('span').text().toLowerCase();
                if (patientName.indexOf(searchQuery) === -1) {
                    $(this).hide(); // Sembunyikan jika nama tidak cocok
                } else {
                    $(this).show(); // Tampilkan jika nama cocok
                }
            });
        });

        // Delete a patient
        $('.deleteBtn').on('click', function () {
            const id = $(this).data('id');
            $.ajax({
                url: '/pasien/' + id,
                type: 'DELETE',
                success: function () {
                    location.reload(); // Reload untuk menampilkan daftar yang sudah diperbarui
                }
            });
        });

        // Show edit modal with the current patient's data
        let editId;
        $('.editBtn').on('click', function () {
            editId = $(this).data('id');
            const patientName = $(this).closest('li').find('span').find('strong').next().text().trim();
            const patientAddress = $(this).closest('li').find('span').find('strong').next().next().text().trim();
            const patientPhone = $(this).closest('li').find('span').find('strong').next().next().next().text().trim();
            $('#editPatientName').val(patientName);
            $('#editPatientAddress').val(patientAddress);
            $('#editPatientPhone').val(patientPhone);
            $('#editModal').modal('show');
        });

        // Update patient on form submission
        $('#editPatientForm').on('submit', function (e) {
            e.preventDefault();
            const name = $('#editPatientName').val().trim();
            const address = $('#editPatientAddress').val().trim();
            const phone = $('#editPatientPhone').val().trim();
            if (name && address && phone) {
                $.ajax({
                    url: '/pasien/' + editId,
                    type: 'PUT',
                    data: JSON.stringify({ namaPasien: name, alamat: address, noTelp: phone }),
                    contentType: 'application/json',
                    success: function () {
                        location.reload(); // Reload untuk menampilkan pasien yang sudah diperbarui
                    }
                });
            }
        });
    });
</script>
